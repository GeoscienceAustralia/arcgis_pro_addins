<Window x:Class="V_3D_Addin.SelectShapeFilesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:V_3D_Addin"
        mc:Ignorable="d"
        Title="SelectShapeFilesWindow" Height="300" Width="300">
    <Grid>
        <Button x:Name="btnSelectShapeFiles" Content="Select shape files" Margin="55,10,0,0" Width="86" Height="18" HorizontalAlignment="Left" VerticalAlignment="Top" Click="btnSelectShapeFiles_Click" FontSize="9.333"/>
        <TextBox x:Name="txtShapeFiles" HorizontalAlignment="Left" Height="222" Margin="10,33,0,0" TextWrapping="Wrap" Text="ShapeFiles" VerticalAlignment="Top" Width="272"/>

    </Grid>
</Window>
